# Aether AI Companion Environment Configuration

# Application Settings
DEBUG=false
HOST=localhost
PORT=8000
AETHER_DATA_DIR=~/.aether

# Database Configuration
DATABASE_URL=sqlite:///aether.db
DATABASE_ECHO=false

# Vector Store Configuration
VECTOR_STORE_PROVIDER=chromadb
VECTOR_STORE_HOST=localhost
VECTOR_STORE_PORT=8000
VECTOR_COLLECTION_NAME=aether_memories

# AI Model Configuration
AI_PROVIDER=ollama
AI_MODEL_NAME=llama2
AI_BASE_URL=http://localhost:11434
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048
# AI_API_KEY=your-api-key-if-using-cloud-provider

# Google Integration (Optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Monday.com Integration (Optional)
# MONDAY_API_TOKEN=your-monday-api-token
MONDAY_API_URL=https://api.monday.com/v2

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
# ENCRYPTION_KEY=your-encryption-key-for-data-encryption

# Logging
LOG_LEVEL=INFO
LOG_FILE=~/.aether/logs/aether.log